<#include "/macro.include"/>
<#assign className = table.className>   
<#assign classNameLower = className?uncap_first>
<#assign classNameFirstLower = table.classNameFirstLower>   
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<#macro mapperEl value>${r"#{"}${value}}</#macro>
<mapper namespace="${basepackage}.${subpackage}.mapper.${className}Mapper">

	<!-- 用于select查询公用抽取的列 -->
	<sql id="Base_Column_List">
		<#list table.columns as column>${column.sqlName}<#if column_has_next>,</#if></#list>
	</sql>
	
	<select id="getById" parameterType="String" resultType="${className}Entity">
		select
			<include refid="Base_Column_List" />
		from
			${table.sqlName}
		where
			id = <@mapperEl "id"/>
	</select>
	
	<select id="countBy" resultType="Long">
		select count(*)
		from ${table.sqlName}
		where 1=1
	</select>
	
	<select id="listPage" resultType="${className}Entity">
		select
			<include refid="Base_Column_List" />
		from ${table.sqlName}
		where 1=1
		<if test="_start != null and _pageSize != null">
			limit ${r'${_start}, ${_pageSize}'}
		</if>
	</select>
	
	<update id="update" parameterType="${basepackage}.${subpackage}.entity.${className}Entity">
		update ${table.sqlName}
		<set>
			<#list table.notPkColumns as column>
			<if test="${column.columnNameFirstLower} != null">
			  ${column.sqlName} = ${r'#{'}${column.columnNameFirstLower}, jdbcType=${column.jdbcSqlTypeName} ${r'}'},
			</if>
	        </#list>
		</set>
		where
			id = <@mapperEl "id"/>
	</update>
	
	<delete id="deleteById" parameterType="String">
		delete from ${table.sqlName} 
		where
			id = <@mapperEl "id"/>
	</delete>
	
	<insert id="insert" useGeneratedKeys="true" keyProperty="id"
		parameterType="${basepackage}.${subpackage}.model.${className}">
		insert into ${table.sqlName}
		<trim prefix="(" suffix=")" suffixOverrides=",">
		<#list table.columns as column>
			<if test="${column.columnNameFirstLower} != null">
				${column.sqlName},
			</if>
        </#list>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
	    <#list table.columns as column>
			<if test="${column.columnNameFirstLower} != null">
				${r'#{'}${column.columnNameFirstLower}, jdbcType=${column.jdbcSqlTypeName}${r'},'}
			</if>
        </#list>
		</trim>
	</insert>
	
	<insert id="insertBatch" useGeneratedKeys="true" keyProperty="id"
		parameterType="${basepackage}.${subpackage}.model.${className}">
		insert into ${table.sqlName}
		<trim prefix="(" suffix=")" suffixOverrides=",">
		<#list table.columns as column>
			<if test="${column.columnNameFirstLower} != null">
				${column.sqlName},
			</if>
        </#list>
		</trim>
		<trim prefix="values " suffix="" suffixOverrides=",">
		<foreach collection="${classNameLower}s" item="${classNameLower}" index="index" separator="," >
		(
	    <#list table.columns as column>
			<if test="${column.columnNameFirstLower} != null">
				${r'#{'}${column.columnNameFirstLower}, jdbcType=${column.jdbcSqlTypeName}${r'},'}
			</if>
        </#list>
        )
        </foreach>
		</trim>
	</insert>
	
</mapper>